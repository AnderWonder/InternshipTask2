<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/request_type_icon_image_view"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_request_type_doc" />

            <TextView
                android:id="@+id/requestsManagerLikesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_like"
                android:drawablePadding="8dp"
                android:gravity="center"
                tools:text="2" />

        </RelativeLayout>

        <View
            android:id="@+id/vertical_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDivider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/requestsManagerRequestInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Демонтаж інших об’єктів, що входять до переліку малого будивництва" />

            <TextView
                android:id="@+id/requestsManagerAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/requestsManagerRequestInfoTextView"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Вул. Вадима Гетьмана, 42" />

            <TextView
                android:id="@+id/requestsManagerSolveDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:text="Кві 26, 2016" />

            <TextView
                android:id="@+id/requestsManagerRequestDaysLeftTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:text="- 14 днів" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>